<% if filter_remove_links.any? %>
  <div class="facet-tags">
      <div class="facet-tags__group">
          <div class="facet-tags__wrapper">
              <span class="facet-tags__preposition">Active Filters</span>
              <%= filter_remove_links.join.html_safe %>
          </div>
          <div>
            <%= link_to "Clear all filters", url_for("/search?q=#{params[:q]}"), class: "govuk-link" %>
        </div>
    </div>
  </div>
<% end %>
