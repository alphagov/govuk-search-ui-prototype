<%= render "govuk_publishing_components/components/select", {
  id: "topic-select",
  name: "primary_topic",
  label: "Topic",
  data_module: { module: "topics-select" },
  options: primary_topics_options(params[:primary_topic])
} %>

<%= render "govuk_publishing_components/components/select", {
  id: "topic-select-target",
  name: "secondary_topic",
  label: "Sub-topic",
  disabled: params[:primary_topic].blank?,
  options: secondary_topics_options(params[:primary_topic], params[:secondary_topic])
} %>
