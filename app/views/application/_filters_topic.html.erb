<%= render "govuk_publishing_components/components/select", {
  id: "primary_topic",
  name: "primary_topic",
  label: "Topic",
  options: primary_topics_options(permitted_params[:primary_topic])
} %>

<%= render "govuk_publishing_components/components/select", {
  id: "secondary_topic",
  name: "secondary_topic",
  label: "Sub-topic",
  disabled: permitted_params[:primary_topic].blank?,
  options: secondary_topics_options(permitted_params[:primary_topic], permitted_params[:secondary_topic])
} %>
