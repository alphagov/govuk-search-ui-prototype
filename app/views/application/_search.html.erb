<%= tag.div id: "autocomplete", class: "govuk-form-group autocomplete", data: { module: "accessible-autocomplete" } do %>

  <%= render "govuk_publishing_components/components/search", {
    id: "finder-keyword-search",
    class: "autocomplete-input",
    type: 'search',
    value: query,
  } %>

  <%= tag.div class: "autocomplete-result-container" do %>
    <%= tag.span class: "govuk-heading-s govuk-!-padding-bottom-1 govuk-!-padding-top-3 govuk-!-margin-0" do %>
    Search for
    <% end %>

    <%= tag.ul class: "autocomplete-result-list govuk-body" %>

<%= render "suggested_links" %>
  <% end %>
<% end %>

