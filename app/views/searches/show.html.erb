<% if search.corrected_query? %>
  <p class="govuk-body">
    Did you mean &ldquo;<strong><%= link_to search.corrected_query, search_path(q: search.corrected_query) %></strong>&rdquo;?
  </p>
<% end %>

<p class="govuk-body">
  <%= pluralize(search.total_size, "result") %>
  for &ldquo;<strong><%= query %></strong>&rdquo;:
</p>

<ul class="govuk-list govuk-list--bullet">
  <% search.results.each do |result| %>
    <li><%= link_to result.title, result.url, class: "govuk-link" %></li>
  <% end %>
</ul>
